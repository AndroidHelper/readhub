<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%5p] -%F(%L) -%m%n"/>
    </Console>
    <RollingFile name="logger" fileName="D:\\logs\\readhub.log" filePattern="'-'yyyyMMdd">
    	 <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
    	<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%5p] - %c -%F(%L) -%m%n"></PatternLayout>
    	<SizeBasedTriggeringPolicy size="20MB"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="Console"/>
    </Root>
     <Logger name="logger" level="debug">
            <AppenderRef ref="logger"/>
     </Logger>
  </Loggers>
</Configuration>